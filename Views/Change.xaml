<Page x:Class="WpfApp14.Views.Change"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp14.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Change">

    <Grid Background="Wheat">
        <StackPanel Margin="20">
            <TextBlock Text="Registration Form" FontWeight="Bold" FontSize="18" Margin="0 0 0 20" HorizontalAlignment="Center"/>

            <Label Content="Username:"/>
            <TextBox x:Name="txtUsername" Margin="0 0 0 10"/>

            <Label Content="Password:"/>
            <PasswordBox x:Name="txtPassword" Margin="0 0 0 10"/>

            <Label Content="Role:"/>
            <TextBox x:Name="txtRole" Margin="0 0 0 10"/>


            <StackPanel Grid.Row="2">
                <Button Content="Change" Click="change_btn_click" Width="80" HorizontalAlignment="Center" Margin="-100 10 0 0 "/>
                <Button Content="Back" Click="back_btn_click" Width="80" HorizontalAlignment="Center" Margin="100 -20 0 0 "/>
            </StackPanel>

        </StackPanel>

    </Grid>
</Page>
